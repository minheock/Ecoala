/* custom-btn btn-3 
<button class="custom-btn btn-3"><span>Read More</span></button> */
#btnBTE {
    font-size: 30px;
    text-align: center;
    margin: 20px;

    width: 130px;
    height: 40px;
    color: #fff;
    border-radius: 5px;
    padding: 10px 25px;
    font-family: 'Lato', sans-serif;
    font-weight: 500;
    background: transparent;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    display: inline-block;
    box-shadow: inset 2px 2px 2px 0px rgba(255, 255, 255, .5),
        7px 7px 20px 0px rgba(0, 0, 0, .1),
        4px 4px 5px 0px rgba(0, 0, 0, .1);
    outline: none;
}

#btnBTE {
    background: rgb(0, 172, 238);
    background: linear-gradient(0deg, rgba(0, 172, 238, 1) 0%, rgba(2, 126, 251, 1) 100%);
    width: 130px;
    height: 40px;
    line-height: 42px;
    padding: 0;
    border: none;

}

#btnBTE span {
    position: relative;
    display: block;
    width: 100%;
    height: 100%;
}

#btnBTE:before,
#btnBTE:after {
    position: absolute;
    content: "";
    right: 0;
    top: 0;
    background: rgba(2, 126, 251, 1);
    transition: all 0.3s ease;
}

#btnBTE:before {
    height: 0%;
    width: 2px;
}

#btnBTE:after {
    width: 0%;
    height: 2px;
}

#btnBTE:hover {
    background: transparent;
    box-shadow: none;
}

#btnBTE:hover:before {
    height: 100%;
}

#btnBTE:hover:after {
    width: 100%;
}

#btnBTE span:hover {
    color: rgba(2, 126, 251, 1);
}

#btnBTE span:before,
#btnBTE span:after {
    position: absolute;
    content: "";
    left: 0;
    bottom: 0;
    background: rgba(2, 126, 251, 1);
    transition: all 0.3s ease;
}

#btnBTE span:before {
    width: 2px;
    height: 0%;
}

#btnBTE span:after {
    width: 0%;
    height: 2px;
}

#btnBTE span:hover:before {
    height: 100%;
}

#btnBTE span:hover:after {
    width: 100%;
}




